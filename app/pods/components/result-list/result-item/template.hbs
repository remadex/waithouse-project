<div
  class='flex items-center justify-between'
  {{did-insert this.setWidget @song}}
>
  <img
    src={{@song.artwork_url}}
    alt={{@song.title}}
    class='h-20 w-20 md:h-24 md:w-24 mr-3'
  />
  <div class='flex items-start flex-grow flex-col'>
    <div class='text-lg md:text-xl'>{{@song.title}}</div>
    <div class='text-sm text-gray-400'>{{@song.user.username}}</div>
  </div>
  <div class='flex justify-between self-end'>
    <button
      type='button'
      class='border-2 border-secondary bg-secondary hover:bg-white text-primary duration-200 rounded p-2 mr-2 md:mr-3 group'
      {{on 'click' this.playSong}}
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-4 w-4 md:h-6 md:w-6 fill-current text-white duration-200 group-hover:text-secondary'
        viewBox='0 0 20 20'
      ><path d='M4 4l12 6-12 6z'></path></svg>
    </button>
    <button
      type='button'
      class='border-2 border-error bg-error hover:bg-white text-primary duration-200 rounded p-2 mr-2 md:mr-3 group'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-4 w-4 md:h-6 md:w-6 fill-current text-white duration-200 group-hover:text-error'
        viewBox='0 0 20 20'
      ><path
          d='M10 3.22l-.61-.6a5.5 5.5 0 0 0-7.78 7.77L10 18.78l8.39-8.4a5.5 5.5 0 0 0-7.78-7.77l-.61.61z'
        ></path></svg>
    </button>
    <button
      type='button'
      class='border-2 border-valid bg-valid hover:bg-white text-primary duration-200 rounded p-2 group'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-4 w-4 md:h-6 md:w-6 text-white duration-200 group-hover:text-valid'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='M12 4v16m8-8H4'
        ></path>
      </svg>
    </button>
  </div>
</div>
{{#if this.isOpen}}
  <iframe
    width='100%'
    height='166'
    scrolling='no'
    frameborder='no'
    allow='autoplay'
    id='track{{@song.id}}'
    src='https://w.soundcloud.com/player/?url={{@song.permalink_url}}&show_artwork=false&show_playcount=false&show_user=false&download=false&sharing=false&buying=false'
  >
  </iframe>
{{/if}}